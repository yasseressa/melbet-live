# Add these in Vercel Project Settings > Environment Variables

# Database (keep Aiven for Vercel; local Docker DB won't work on Vercel)
DATABASE_URL=mysql://USER:PASSWORD@HOST:PORT/DBNAME?ssl-mode=REQUIRED

# Public URL (set production domain after deploy)
NEXT_PUBLIC_BASE_URL=https://your-project.vercel.app

# Optional extra allowed origins for Next Server Actions (comma-separated)
SERVER_ACTIONS_ALLOWED_ORIGINS=your-project.vercel.app

# Admin
ADMIN_PASSWORD=change_this_admin_password
ADMIN_COOKIE_NAME=milbet_admin

# Football Data API
FOOTBALL_DATA_API_KEY=
FOOTBALL_DATA_BASE_URL=https://api.football-data.org/v4
FOOTBALL_DATA_COMPETITIONS=PL,PD,SA,BL1,FL1,DED
FOOTBALL_DATA_DAYS_PAST=0
FOOTBALL_DATA_DAYS_FUTURE=7

# API-Football via RapidAPI
FOOTBALL_RAPIDAPI_KEY=
FOOTBALL_RAPIDAPI_HOST=api-football-v1.p.rapidapi.com
FOOTBALL_RAPIDAPI_BASE_URL=https://api-football-v1.p.rapidapi.com/v3

# News
FOOTBALL_NEWS_API_KEY=
FOOTBALL_NEWS_BASE_URL=https://gnews.io/api/v4
FOOTBALL_NEWS_QUERY=football OR soccer
FOOTBALL_NEWS_LANGS=ar,en
FOOTBALL_NEWS_COUNTRY=
FOOTBALL_NEWS_MAX=20
FOOTBALL_NEWS_DAYS_BACK=2
FOOTBALL_NEWS_QUERY_EN=football OR soccer

# Optional Xtream / M3U
XTREAM_HOST=
XTREAM_USERNAME=
XTREAM_PASSWORD=
XTREAM_OUTPUT=ts
M3U_TEST_SERVER_BASE=
M3U_TEST_URL=
M3U_TEST_LOCAL_FILE=
